<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.android.stardroid.activities.DiagnosticActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Who on earth decided that a percent of 0.5 means
             50% ?? Abysmal API design. -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/diagnostics_halfway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/diagnostics_general_lbl_end_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="end"
            app:constraint_referenced_ids="diagnostics_device_lbl,diagnostics_android_version_lbl,diagnostics_skymap_version_lbl" />

        <TextView
            android:id="@+id/diagnostics_general_lbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diagnostics_activity_general_heading"
            style="?attr/textAppearanceHeadline5"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/diagnostics_halfway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/diagnostics_device_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_phone"
            app:layout_constraintStart_toStartOf="@id/diagnostics_general_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_general_lbl" />

        <TextView
            android:id="@+id/diagnostics_phone_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@+id/diagnostics_general_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@+id/diagnostics_device_lbl"
            tools:text="Nexus 5x" />


        <TextView
            android:id="@+id/diagnostics_android_version_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_android_version"
            app:layout_constraintStart_toStartOf="@id/diagnostics_general_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_device_lbl" />

        <TextView
            android:id="@+id/diagnostics_android_version_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_general_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_android_version_lbl"
            tools:text="6.1 (xxx)" />


        <TextView
            android:id="@+id/diagnostics_skymap_version_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_sky_map_version"
            app:layout_constraintStart_toStartOf="@id/diagnostics_general_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_android_version_lbl" />

        <TextView
            android:id="@+id/diagnostics_skymap_version_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_general_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_skymap_version_lbl"
            tools:text="0.0.1 (9999)" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/diagnostics_sensor_lbl_end_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="end"
            app:constraint_referenced_ids="diagnostics_compass_lbl,diagnostics_accelerometer_lbl,diagnostics_gyroscope_lbl,diagnostics_rotation_vector_lbl,diagnostics_rotation_matrix_lbl,diagnostics_light_level_lbl" />

        <TextView
            android:id="@+id/diagnostics_sensors_lbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diagnostics_activity_sensors_heading"
            style="?attr/textAppearanceHeadline5"
            app:layout_constraintEnd_toEndOf="@id/diagnostics_halfway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diagnostics_skymap_version_lbl" />

        <TextView
            android:id="@+id/diagnostics_compass_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_compass"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_sensors_lbl" />

        <TextView
            android:id="@+id/diagnostics_compass_values_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_compass_lbl"
            tools:text="-, -, -" />


        <TextView
            android:id="@+id/diagnostics_accelerometer_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_accelerometer"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_compass_lbl" />

        <TextView
            android:id="@+id/diagnostics_accelerometer_values_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_accelerometer_lbl"
            tools:text="-, -, -" />


        <TextView
            android:id="@+id/diagnostics_gyroscope_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_gyroscope"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_accelerometer_lbl" />

        <TextView
            android:id="@+id/diagnostics_gyro_values_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_gyroscope_lbl"
            tools:text="-, -, -" />


        <TextView
            android:id="@+id/diagnostics_rotation_vector_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_rotation_vector"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_gyroscope_lbl" />

        <TextView
            android:id="@+id/diagnostics_rotation_values_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_rotation_vector_lbl"
            tools:text="-, -, -" />


        <TextView
            android:id="@+id/diagnostics_rotation_matrix_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_rotation_matrix"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_rotation_vector_lbl" />

        <TextView
            android:id="@+id/diagnostics_rotation_matrix_row1_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_rotation_matrix_lbl"
            tools:text="-, -, -" />

        <TextView
            android:id="@+id/diagnostics_rotation_matrix_row2_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_rotation_matrix_row1_txt"
            tools:text="-, -, -" />

        <TextView
            android:id="@+id/diagnostics_rotation_matrix_row3_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_rotation_matrix_row2_txt"
            tools:text="-, -, -" />


        <TextView
            android:id="@+id/diagnostics_light_level_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_light_level"
            app:layout_constraintStart_toStartOf="@id/diagnostics_sensors_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_rotation_matrix_row3_txt" />

        <TextView
            android:id="@+id/diagnostics_light_values_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_sensor_lbl_end_barrier"
            app:layout_constraintTop_toTopOf="@id/diagnostics_light_level_lbl"
            tools:text="500" />


        <TextView
            android:id="@+id/diagnostics_location_time_lbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diagnostics_activity_location_and_time_heading"
            style="?attr/textAppearanceHeadline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/diagnostics_halfway"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/diagnostics_barrier_location_time_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="end"
            app:constraint_referenced_ids="diagnostics_gps_lbl,diagnostics_location_lbl,diagnostics_pointing_lbl,diagnostics_mag_correction_lbl,diagnostics_local_datetime_lbl,diagnostics_universal_datetime_lbl" />

        <TextView
            android:id="@+id/diagnostics_gps_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_gps"
            app:layout_constraintStart_toStartOf="@id/diagnostics_location_time_lbl"
            app:layout_constraintTop_toBottomOf="@+id/diagnostics_location_time_lbl" />

        <TextView
            android:id="@+id/diagnostics_gps_status_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_gps_lbl"
            tools:text="(waiting)" />


        <TextView
            android:id="@+id/diagnostics_location_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_location"
            app:layout_constraintStart_toStartOf="@id/diagnostics_local_datetime_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_gps_lbl" />

        <TextView
            android:id="@+id/diagnostics_location_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_location_lbl"
            tools:text="--, -- (manual)" />


        <TextView
            android:id="@+id/diagnostics_pointing_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_pointing_ra_dec"
            app:layout_constraintStart_toStartOf="@id/diagnostics_location_time_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_location_lbl" />

        <TextView
            android:id="@+id/diagnostics_pointing_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_pointing_lbl"
            tools:text="-123, 32" />


        <TextView
            android:id="@+id/diagnostics_mag_correction_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_magnetic_correction"
            app:layout_constraintStart_toStartOf="@id/diagnostics_location_time_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_pointing_lbl" />

        <TextView
            android:id="@+id/diagnostics_magnetic_correction_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_mag_correction_lbl"
            tools:text="+?" />


        <TextView
            android:id="@+id/diagnostics_local_datetime_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_local_datetime"
            app:layout_constraintStart_toStartOf="@id/diagnostics_location_time_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_mag_correction_lbl" />

        <TextView
            android:id="@+id/diagnostics_local_datetime_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_local_datetime_lbl"
            tools:text="13:33 July 20, 1969" />


        <TextView
            android:id="@+id/diagnostics_universal_datetime_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_universal_time"
            app:layout_constraintStart_toStartOf="@id/diagnostics_location_time_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_local_datetime_lbl" />

        <TextView
            android:id="@+id/diagnostics_utc_datetime_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_barrier_location_time_end"
            app:layout_constraintTop_toTopOf="@id/diagnostics_universal_datetime_lbl"
            tools:text="20:18 July 20, 1969" />


        <TextView
            android:id="@+id/diagnostics_network_lbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diagnostics_activity_network_heading"
            style="?attr/textAppearanceHeadline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/diagnostics_halfway"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_universal_datetime_lbl" />


        <TextView
            android:id="@+id/diagnostics_connection_lbl"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            android:text="@string/diagnostics_activity_connection"
            app:layout_constraintStart_toStartOf="@id/diagnostics_network_lbl"
            app:layout_constraintTop_toBottomOf="@id/diagnostics_network_lbl" />

        <TextView
            android:id="@+id/diagnostics_network_status_txt"
            style="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/diagnostics_row_left_padding"
            app:layout_constraintStart_toEndOf="@id/diagnostics_connection_lbl"
            app:layout_constraintTop_toTopOf="@id/diagnostics_connection_lbl"
            tools:text="WiFi?" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
